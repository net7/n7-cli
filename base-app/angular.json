{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "base-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "ba",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/base-app",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": false,
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "fileReplacements": [
              {
                "replace": "src/assets/app-config.json",
                "with": "src/assets/app-config.empty.json"
              }, 
              {
                "replace": "src/app/app.module.ts",
                "with": "src/app/app.module.empty.ts"
              }, 
              {
                "replace": "src/app/app.routes.ts",
                "with": "src/app/app.routes.empty.ts"
              }, 
              {
                "replace": "src/styles/styles.scss",
                "with": "src/styles/styles.empty.scss"
              }
            ],
            "styles": [
              "./node_modules/flatpickr/dist/flatpickr.min.css",
              "./node_modules/tippy.js/themes/light-border.css",
              "./node_modules/@n7-frontend/icon-font/Font/n7-icon/style.css",
              "./src/styles/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "arianna": {
              "fileReplacements": [
                {
                  "replace": "src/assets/app-config.json",
                  "with": "src/assets/app-config.arianna.json"
                }, 
                {
                  "replace": "src/app/app.routes.ts",
                  "with": "src/app/app.routes.arianna.ts"
                }, 
                {
                  "replace": "src/app/app.module.ts",
                  "with": "src/app/app.module.arianna.ts"
                }, 
                {
                  "replace": "src/styles/styles.scss",
                  "with": "src/styles/styles.arianna.scss"
                }
              ]
            },
            "dataviz": {
              "fileReplacements": [
                {
                  "replace": "src/assets/app-config.json",
                  "with": "src/assets/app-config.dataviz.json"
                }, 
                {
                  "replace": "src/app/app.routes.ts",
                  "with": "src/app/app.routes.dataviz.ts"
                }, 
                {
                  "replace": "src/app/app.module.ts",
                  "with": "src/app/app.module.dataviz.ts"
                }, 
                {
                  "replace": "src/styles/styles.scss",
                  "with": "src/styles/styles.dataviz.scss"
                }
              ]
            },
            "empty": {
              "fileReplacements": [
                {
                  "replace": "src/assets/app-config.json",
                  "with": "src/assets/app-config.empty.json"
                }, 
                {
                  "replace": "src/app/app.routes.ts",
                  "with": "src/app/app.routes.empty.ts"
                }, 
                {
                  "replace": "src/app/app.module.ts",
                  "with": "src/app/app.module.empty.ts"
                }, 
                {
                  "replace": "src/styles/styles.scss",
                  "with": "src/styles/styles.empty.scss"
                }
              ]
            },
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "base-app:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "base-app:build:production"
            },
            "empty": {
              "browserTarget": "base-app:build:empty"
            },
            "arianna": {
              "browserTarget": "base-app:build:arianna"
            },
            "dataviz": {
              "browserTarget": "base-app:build:dataviz"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "base-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "base-app:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "base-app:serve:production"
            }
          }
        }
      }
    }},
  "defaultProject": "base-app"
}